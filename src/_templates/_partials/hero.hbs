<!-- Large hero header -->
<header class="hero js__hero" id="hero">

	<div class="hero__unit js__hero__unit" data-0="opacity: 1;" data-top-center="opacity: 0;" data-anchor-target=".js__hero__placeholder__half">

		<!-- Content wrapper -->
		<div class="hero__content l-container">

			<!-- Intro text and cta -->
			<div class="hero__intro__pos">
				<div class="hero__intro js__hero__intro" data-0="transform: translate3d(0rem,0rem,0rem) scale(1);" data-top-bottom="transform: translate3d(0rem,-12rem,0rem) scale(.95);" data-anchor-target=".js__hero__placeholder">
					<h1 class="hero__intro__title" >

						<div class="hero__intro__title__line">
							<span class="hero__intro__title__item hero__intro__title__item--first">Design</span>
							<span class="hero__intro__title__item hero__intro__title__item--second">Development</span>
						</div>

						<div class="hero__intro__title__line">
							<span class="hero__intro__title__item hero__intro__title__item--third">Digital Illustration</span>
						</div>
					</h1>

					<p class="hero__intro__description"><strong>Andy Hook</strong> is a web designer, front-end developer and digital illustrator from <a href="https://en.wikipedia.org/wiki/East_Sussex" target="_blank" title="Wikipedia entry for East Sussex">East Sussex</a></p>

					<a href="#work" class="hero__button" data-scroll="href">
						<span class="hero__button__text">View my latest work</span>
						<div class="hero__button__icon"><svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ui-angle-down"></use></svg></div>
					</a>
				</div>
			</div>

			<!-- Main graphic -->
			<ul class="hero__parallax js__parallax" data-parallax-config="hero" data-0="transform: scale(1);" data-top-bottom="transform: scale(.95);" data-anchor-target=".js__hero__placeholder">

				<!-- Background particles -->
				<li class="layer hero__particles--background__index" data-depth="0.4">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-5rem,0rem)" data-anchor-target=".js__hero__placeholder">

						<!-- Wrapped in a positioner for scroll visibility effects -->
						<div class="hero__particles__pos">
							<div class="hero__particles hero__particles--background"></div>
						</div>
					</div>
				</li>

				<!-- Tablet -->
				<li class="layer hero__tablet__index" data-depth="0.5">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-7rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__tablet"></div>
					</div>
				</li>

				<!-- Darwin -->
				<li class="layer hero__butterfly__index" data-depth="0.7">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-8rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__butterfly hero__butterfly--darwin"></div>
					</div>
				</li>

				<!-- Monty -->
				<li class="layer hero__butterfly__index" data-depth="0.9">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-7.5rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__butterfly hero__butterfly--monty"></div>
					</div>
				</li>

				<!-- Wallace -->
				<li class="layer hero__butterfly__index" data-depth="1.1">

					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-9rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__phone">
							<div class="hero__butterfly hero__butterfly--wallace"></div>
						</div>
					</div>
				</li>

				<!-- Mascot -->
				<li class="layer hero__mascot__index" data-depth="1.3">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-10rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__mascot"></div>
					</div>
				</li>

				<!-- Middleground particles -->
				<li class="layer hero__particles--middleground__index" data-depth="1.5">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-10rem,0rem)" data-anchor-target=".js__hero__placeholder">

						<!-- Wrapped in a positioner for scroll visibility effects -->
						<div class="hero__particles__pos">
							<div class="hero__particles hero__particles--middleground"></div>
						</div>
					</div>
				</li>

				<!-- Emblem -->
				<li class="layer hero__emblem__index" data-depth="0.5">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-7rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__emblem"></div>
					</div>
				</li>

				<!-- Sable -->
				<li class="layer hero__butterfly__index" data-depth="1.5">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-11rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__butterfly hero__butterfly--sable"></div>
					</div>
				</li>

				<!-- Ora -->
				<li class="layer hero__butterfly__index" data-depth="1.7">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-13rem,0rem)" data-anchor-target=".js__hero__placeholder">
						<div class="hero__butterfly hero__butterfly--ora"></div>
					</div>
				</li>

				<!-- Foreground particles -->
				<li class="layer hero__particles--foreground__index" data-depth="7">
					<div class="hero__parallax__pos" data-0="transform: translate3d(0rem,0rem,0rem)" data-top-bottom="transform: translate3d(0rem,-20rem,0rem)" data-anchor-target=".js__hero__placeholder">

						<!-- Wrapped in a positioner for scroll visibility effects -->
						<div class="hero__particles__pos">
							<div class="hero__particles hero__particles--foreground"></div>
						</div>
					</div>
					
				</li>
				
			</ul>
		</div>

		<!-- Background -->
		<div class="hero__background">
			<div class="hero__background__gradient hero__background__gradient--top-left"></div>
			<div class="hero__background__gradient hero__background__gradient--bottom-right"></div>
			<div class="hero__background__gradient hero__background__gradient--base"></div>

			<div class="hero__background__image__pos" data-0="transform: translate3d(0rem,0rem,0rem);" data-top-bottom="transform: translate3d(0rem,-10rem,0rem);" data-anchor-target=".js__hero__placeholder">
				<div class="hero__background__image"></div>
			</div>
			
		</div>
	</div>
</header> <!-- /hero -->

<!-- Placeholder maintains flow when hero is fixed -->
<!-- This is outside of the main module because of the way 3dtranform affects fixed position elements -->
<div class="hero__placeholder js__hero__placeholder" id="home" data-scroll-visibility="full" data-scroll-visibility-target=".js__hero" data-scroll-visibility-direction="both">
	<div class="hero__placeholder__half js__hero__placeholder__half"></div>
</div>